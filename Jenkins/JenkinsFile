pipeline {
    agent any
    
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'maven'
                    args '-v /root/.m2:/root/.m2' 
                }
            }
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline executado com sucesso!'
        }
        failure {
            echo 'Pipeline falhou!'
        }
    }
}
